<% if current_user = @user or (@user.anonymous? == false and @user.name? == true) %>

<p>View Profile:</p>

<p> Username: <%= @user.name %></p>

<p> Anonymous? <%= @user.anonymous.to_s %></p>

<p> Subscribed? <%= @user.subscribe.to_s %></p>
<% end %>

<% if current_user.admin? %>
<%= link_to 'Admin Delete', @user, method: :delete%>
<% end %>

